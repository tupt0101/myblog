@model FinalProject_Blog.Models.Post

@{
    ViewData["Title"] = "EditPost";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2 class="text-center">Edit Post</h2>
<br />
<form asp-action="EditPost" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <textarea asp-for="Description" class="form-control" rows="60"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <textarea asp-for="ShortDescription" class="form-control" rows="5"></textarea>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label">Image</label>
                <input type="file" name="Image" class="form-control" />
                <input type="hidden" asp-for="ImgSrc" />
                <span asp-validation-for="ImgSrc" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="UrlSlug" class="control-label"></label>
                <input asp-for="UrlSlug" class="form-control" />
                <span asp-validation-for="UrlSlug" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="@(new SelectList(@ViewBag.listCat, "Id", "Name"))" class="form-control"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Published" /> Publish this post ?
                    </label>
                </div>
            </div>
        </div>

    </div>

    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-default" />
    </div>
</form>


<div>
    <a asp-action="Post">Back to List</a>
</div>

